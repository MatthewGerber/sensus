{
  "id": "ASPL",
  "description": "Example",
  "action-interval": "00:00:10",
  "observation-duration": "00:00:05",
  "control-completion-check-interval": "00:00:20",
  "observed-data": {
    "max-count": 100,
    "max-age": null
  },
  "statements": [
    {
      "id": "Acceleration",
      "description": "Keeps device awake and increases accelerometer sampling rate based on x-axis magnitude.",
      "criterion": {
        "logic": "Disjunction",
        "elements": [
          {
            "property-type": "Sensus.Probes.Movement.AccelerometerDatum",
            "property-name": "X",
            "aggregation": {
              "type": "Any",
              "horizon": "00:00:05"
            },
            "relation": "GreaterThan",
            "target": 2
          },
          {
            "property-type": "Sensus.Probes.Movement.AccelerometerDatum",
            "property-name": "X",
            "aggregation": {
              "type": "Any",
              "horizon": "00:00:05"
            },
            "relation": "LessThan",
            "target": -2
          }
        ]
      },
      "begin-control-settings": [
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": true
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 50
        }
      ],
      "end-control-settings": [
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": false
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 5
        }
      ]
    },
    {
      "id": "Proximity and Walking",
      "description": "Keeps device awake and increases accelerometer sampling rate if device is near a surface or the user is walking.",
      "criterion": {
        "logic": "Disjunction",
        "elements": [
          {
            "property-type": "Sensus.Probes.Location.ProximityDatum",
            "property-name": "Distance",
            "aggregation": {
              "type": "MostRecent"
            },
            "relation": "EqualTo",
            "target": 0
          },
          {
            "property-type": "Sensus.Probes.Movement.ActivityDatum",
            "property-name": "ActivityContinuing",
            "aggregation": {
              "type": "Any",
              "horizon": "00:00:05"
            },
            "relation": "EqualTo",
            "target": "Walking"
          }
        ]
      },
      "begin-control-settings": [
        {
          "property-type": "Sensus.Probes.Probe",
          "property-name": "Enabled",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": true
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": true
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 50
        }
      ],
      "end-control-settings": [
        {
          "property-type": "Sensus.Probes.Probe",
          "property-name": "Enabled",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": false
        }
      ]
    }
  ]
}