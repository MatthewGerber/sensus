{
  "id": "ASPL",
  "description": "Example",
  "action-interval": "00:00:10",
  "observation-duration": "00:00:05",
  "control-completion-check-interval": "00:00:20",
  "observed-data": {
    "max-count": 100,
    "max-age": null
  },
  "statements": [
    {
      "id": "Acceleration",
      "description": "Keeps device awake and increases accelerometer sampling rate based on observed acceleration magnitudes. Demonstrates a few of the quantitative aggregation and relation options.",
      "criterion": {
        "logic": "Disjunction",
        "elements": [
          {
            "property-type": "Sensus.Probes.Movement.AccelerometerDatum",
            "property-name": "X",
            "aggregation": "Average",
            "relation": "GreaterThan",
            "target": 1.2
          },
          {
            "property-type": "Sensus.Probes.Movement.AccelerometerDatum",
            "property-name": "Y",
            "aggregation": "Maximum",
            "relation": "GreaterThanOrEqualTo",
            "target": 2
          },
          {
            "property-type": "Sensus.Probes.Movement.AccelerometerDatum",
            "property-name": "Z",
            "aggregation": "Maximum",
            "relation": "GreaterThanOrEqualTo",
            "target": 2
          }
        ]
      },
      "begin-control-settings": [
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": true
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 50
        }
      ],
      "end-control-settings": [
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": false
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 5
        }
      ]
    },
    {
      "id": "Proximity and Walking",
      "description": "Keeps device awake and increases accelerometer sampling rate if device is near a surface or the user begins walking. Demonstrates a few of the qualitative aggregation and relation options.",
      "criterion": {
        "logic": "Disjunction",
        "elements": [
          {
            "property-type": "Sensus.Probes.Location.ProximityDatum",
            "property-name": "Distance",
            "aggregation": "Newest",
            "relation": "EqualTo",
            "target": 0
          },
          {
            "property-type": "Sensus.Probes.Movement.ActivityDatum",
            "property-name": "ActivityStarting",
            "aggregation": "Newest",
            "relation": "EqualTo",
            "target": "OnFoot"
          }
        ]
      },
      "begin-control-settings": [
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": true
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 50
        }
      ],
      "end-control-settings": [
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "KeepDeviceAwake",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": false
        },
        {
          "property-type": "Sensus.Probes.ListeningProbe",
          "property-name": "MaxDataStoresPerSecond",
          "target-type": "Sensus.Probes.Movement.AccelerometerProbe",
          "value": 5
        }
      ]
    }
  ]
}